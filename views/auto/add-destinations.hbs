<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Add Destination</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Loctions</a></li>
                        </ol>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Travel Loctions</h3>
                </div>

                <form class="container" action="/auto/add-destinations" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">To Location</label>
                                <input type="text" class="form-control" name="location">
                                <input type="hidden" class="form-control" name="auto" value="{{autoDriver._id}}">
                                <input type="hidden" class="form-control" name="from" value="{{autoDriver.location}}">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Kilometer from <small>({{autoDriver.location}})</small></label>
                               <select name="kilometer" id="kilo"  class="form-control">
                                   <option value="" selected disabled>--select--</option>
                                   {{#each km}}
                                    <option value="{{this.kilometer}}">{{this.kilometer}}</option>
                                    {{/each}}
                               </select>
                            </div>
                        </div>
                      
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Charge</label>
                                <input type="number" class="form-control" name="charge" id="rate" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                               <button class="btn btn-success">Add</button>
                               <a href="/auto/places" class="btn btn-dark"> Cancel</a>
                            </div>
                        </div>
                      
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
