<section class="w3l-cts py-5" style="background-image:url(/user/assets/images/BlueBackground-3.jpg);">
    <div class="container ">
        <div class="header-section text-center">
            <br>
            <h4 class="m-5">Book Auto</h4>

        </div>
        <div class="row">
            <div class="col-md-4 ">
                <div class="card " style=" height:100%;">
                    <img class="card-img-top"
                        src="/auto/auto-profile/{{autoDetails._id}}.jpg" style="width:100% ;"
                        alt="Card image cap">
                    <div class="card-body p-4">
                        <p class="card-text h6 text-dark font-weight-bolder ">Regno - <span style="float: right;">{{autoDetails.regno}}
                                </span></p>
                        <p class="card-text h6 text-dark mt-2 font-weight-bolder">Name - <span style="float: right;">{{autoDetails.name}}</span></p>
                        <p class="card-text h6 text-dark mt-2 font-weight-bolder">Location - <span style="float: right;">{{autoDetails.location}}</span>
                        </p>
                        <i class="fa fa-star text-success mt-4 "></i> <i class="badge badge-success font-weight-bolder"> {{rating}}</i>
                        <a href="/auto-profile/{{autoDetails._id}}" class="btn text-white mt-3" style="background-color: #4d7ae3; float:right;"> View</a>
                    </div>
                </div>
            </div>
            <div class="col-md-8  pt-5">
                
                    <form action="/book-auto" method="POST">
                        <div class="form-group row">
                            <label  class="col-sm-2 col-form-label font-weight-bolder">From <i class="fa fa-arrow-left"></i></label>
                            <div class="col-sm-8">
                                <input type="text" readonly value="{{autoDetails.location}}" class="form-control bg-light"
                                    id="from" name="from">
                                <input type="hidden" name="autoId" value="{{autoDetails._id}}">
                                <input type="hidden" name="status" value="0">
                                <input type="hidden" name="userId" value="{{userDetails._id}}">
                                <input type="hidden" name="usermobile" value="{{userDetails.mobile}}">
                                <input type="hidden" name="automobile" value="{{autoDetails.mobile}}">
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label  class="col-sm-2 col-form-label font-weight-bolder">To <i class="fa fa-arrow-right"></i></label>
                            <div class="col-sm-8">
                                <select name="to" class="form-control" id="to" required>
                                    <option value="" selected>--select--</option>
                                    {{#each places}}
                                    <option value="{{this.location}}">{{this.location}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label  class="col-sm-2 col-form-label font-weight-bolder">Pick at</label>
                            <div class="col-sm-8">
                                <input type="text" name="landmark" class="form-control"
                                    placeholder="Landmark of the exact location to pick " required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label  class="col-sm-2 col-form-label font-weight-bolder">Charge</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" readonly id="charge" name="charge">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label  class="col-sm-2 col-form-label"></label>
                            {{#if userBooking}}
                            <div class="col-sm-8">
                                 <p class="mt-3 text-danger font-weight-bold">You have already booked an <a href="/bookings/{{userDetails._id}}" class="text-info">auto</a>  please cancel by calling the auto for another booking !</p>
                                 <a href="/bookings/{{userDetails._id}}" class=" btn btn-danger btn-sm mt-3"> View booking</a>
                            </div>  
                           
                            {{else}}
                            <div class="col-sm-8">
                                <button class="btn text-white w-25" style="background-color: #4d7ae3;">Book</button>
                                <a href="/" class="btn text-white w-25" style="background-color: #111624;">Cancel</a>
                            </div>
                            {{/if}}
                        </div>

                    </form>
                
            </div>
        </div>

    </div>
</section>