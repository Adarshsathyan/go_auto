<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/user/login/assets/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/user/login/assets/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/user/login/assets/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="/user/login/assets/css/style.css">

    <title>Login | User</title>
  </head>
  <body>
  

  
  <div class="content">
    <div class="container">
      <div class="row">
        <div class="col-md-6 order-md-2">
          <img src="/user/login/assets/images/forgot-pass.svg" alt="Image" class="img-fluid">
        </div>
        <div class="col-md-6 contents">
          <div class="row justify-content-center">
            <div class="col-md-8 " style="margin-top:126px;">
              <div class="mb-4">
              <h3><strong>New Password</strong></h3>
              {{#if changeErr}}
              <p class="mb-4 text-danger">Something went worng please try again</p>
              {{else}}
              <p class="mb-4">Enter the new password</p>
              {{/if}}
            </div>
            <form action="/new-pass" method="post" class="mt-5">
              <div class="form-group first">
                <label for="password">New Password</label>
                <input type="password" class="form-control" name="password"  minlength="8" max="14">
                <input type="hidden" name="userId" value="{{details._id}}">
              </div>
            

              <button  class="btn text-white btn-block" style="background-color:#4d7ae3 ;">Verify</button>

             
            </form>
            </div>
          </div>
          
        </div>
        
      </div>
    </div>
  </div>

  
    <script src="/user/login/assets/js/jquery-3.3.1.min.js"></script>
    <script src="/user/login/assets/js/popper.min.js"></script>
    <script src="/user/login/assets/js/bootstrap.min.js"></script>
    <script src="/user/login/assets/js/main.js"></script>
  </body>
</html>