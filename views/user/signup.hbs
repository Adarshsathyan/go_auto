<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/user/login/assets/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/user/login/assets/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/user/login/assets/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="/user/login/assets/css/style.css">

    <title>Signup | User</title>
  </head>
  <body>
  

  
  <div class="content">
    <div class="container">
      <div class="row">
        
        <div class="col-md-6 contents">
          <div class="row justify-content-center">
            <div class="col-md-8">
              <div class="mb-4">
              <h3>Sign Up to <strong>Go Auto</strong></h3>
              {{#if err}}
              <p class="mb-4" style="color: #4d7ae3;">Username/Mobile already exists..</p>
              {{else}}
              <p class="mb-4">Safe travel ! Fast Picking ! Affordable Charge! </p>
              {{/if}}
            </div>
            <form action="/signup" method="post" enctype="multipart/form-data">
              <div class="form-group first">
                <label>Username (xyz@gmail.com)</label>
                <input type="email" class="form-control" name="username">
                <input type="hidden" value="0" name="status">

              </div>
              <div class="form-group last mb-4">
                <label>Password</label>
                <input type="password" class="form-control" name="password" minlength="8" max="14">
                
              </div>
              <div class="form-group last mb-4">
                <label >Full name</label>
                <input type="text" class="form-control" name="name">
                
                
              </div>
              <div class="form-group last mb-4">
                <label>Mobile</label>
                <input type="tel" class="form-control" name="mobile">
                
              </div>
              <div class="form-group last mb-4">
                <label>Location</label>
                <input type="text" class="form-control" name="location">
                
              </div>
              <div class="form-group last mb-4">
                <label>Image</label>
                <input type="file" class="form-control" name="image">
                
              </div>
              <button  class="btn text-white btn-block mt-5" style="background-color:#4d7ae3 ;">Sign Up</button>
              <div class="d-flex mt-4 align-items-center text-center ">
               <a href="/login" class="forgot-pass ml-auto mr-auto ">Already have an account? LogIn</a>
              </div>
            </form>
            </div>
          </div>
          
        </div>
        <div class="col-md-6 order-md-2">
          <img src="/user/login/assets/images/signup.svg" alt="Image" class="img-fluid">
        </div>
        
      </div>
    </div>
  </div>

  
    <script src="/user/login/assets/js/jquery-3.3.1.min.js"></script>
    <script src="/user/login/assets/js/popper.min.js"></script>
    <script src="/user/login/assets/js/bootstrap.min.js"></script>
    <script src="/user/login/assets/js/main.js"></script>
  </body>
</html>