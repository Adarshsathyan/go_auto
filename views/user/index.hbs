<section class="w3l-cts py-5" id="auto">
    <div class="container py-lg-3">
        <div class="header-section text-center mx-auto">
            <span class="subhny-title text-center mb-2">Quick Pick</span>
            <h3 class="hny-title text-center mb-5">Nearby Autos</h3>
        </div>
        <div class="mt-5">
            <div class="mx-auto">
                <!--Horizontal Tab-->
                <div class="container">
                    
                        
                            <div class="row">
                                {{#each autos}}
                                <div class="col-md-3 mb-2 ">
                                    <div class="card p-2">
                                        <img src="/user/assets/images/auto-driver.jpg" style="width: 100%;"
                                            class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <h5 class="card-title">{{this.regno}}</h5>
                                            <p class="card-text">{{this.location}}</p>
                                            <p class="text-warning mb-2">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </p>
                                            <a href="/book-auto/{{this._id}}" class="btn text-white"
                                                style="background-color:#4d7ae3 ; ">Book</a>
                                        </div>
                                    </div>

                                </div>
                                {{/each}}

                            </div>
                        

                   
                </div>
            </div>
        </div>
    </div>
</section>
