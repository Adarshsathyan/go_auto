                <form action="#" method="post" class="row ">
                    <div class="col-md-1 ml-4 col-1 "></div>
                    <input type="search" placeholder="from.." name="location" required="required"
                        class="form-control  col-md-4 col-3 " style="height: 50px;">
                        <div class=" ml-3"></div>
                        <input type="search" placeholder="to.." name="location" required="required"
                        class="form-control  col-md-4 col-3" style="height: 50px;">
                    <button class="col-md-2 ml-2 col-3 btn text-white" style="background-color:#4d7ae3 ;">Go <span
                            class='fa fa-search text-white'></span></button>
